{
  "name": "risidio-task",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:init": "npm run db:init && npm run build",
    "start": "next start",
    "lint": "next lint",
    "db:migrate": "drizzle-kit push:sqlite",
    "db:seed": "tsx ./db/seed.ts",
    "db:init": "npm run db:migrate && npm run db:seed",
    "db:init:local": "dotenv -e .env.local npm run db:init",
    "db:init:dev": "npm run db:init:local && npx drizzle-kit studio",
    "start:full": "concurrently \"npm run dev\" \"npx drizzle-kit studio\"",
    "test": "jest"
  },
  "dependencies": {
    "@libsql/client": "^0.6.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tursodatabase/turso": "^0.1.3",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.30.10",
    "jotai": "^2.12.5",
    "lucide-react": "^0.368.0",
    "next": "14.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^9.2.0",
    "dotenv": "^16.6.1",
    "dotenv-cli": "^7.4.4",
    "drizzle-kit": "^0.20.18",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
